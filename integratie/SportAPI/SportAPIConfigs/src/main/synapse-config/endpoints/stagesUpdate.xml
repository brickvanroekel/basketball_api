<?xml version="1.0" encoding="UTF-8"?>
<endpoint name="stagesUpdate" xmlns="http://ws.apache.org/ns/synapse">
    <http method="put" uri-template="https://api-stages-tdf.herokuapp.com/stages/update/{id}">
        <suspendOnFailure>
            <initialDuration>-1</initialDuration>
            <progressionFactor>1.0</progressionFactor>
        </suspendOnFailure>
        <markForSuspension>
            <retriesBeforeSuspension>0</retriesBeforeSuspension>
        </markForSuspension>
    </http>
</endpoint>
