<?xml version="1.0" encoding="UTF-8"?>
<endpoint name="stagesAdd" xmlns="http://ws.apache.org/ns/synapse">
    <http method="post" uri-template="https://api-stages-tdf.herokuapp.com/stages/add">
        <suspendOnFailure>
            <initialDuration>-1</initialDuration>
            <progressionFactor>1.0</progressionFactor>
        </suspendOnFailure>
        <markForSuspension>
            <retriesBeforeSuspension>0</retriesBeforeSuspension>
        </markForSuspension>
    </http>
</endpoint>
