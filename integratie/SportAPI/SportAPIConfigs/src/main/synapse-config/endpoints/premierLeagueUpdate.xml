<?xml version="1.0" encoding="UTF-8"?>
<endpoint name="premierLeagueUpdate" xmlns="http://ws.apache.org/ns/synapse">
    <http method="put" uri-template="https://premierleague-app.herokuapp.com/update">
        <suspendOnFailure>
            <initialDuration>-1</initialDuration>
            <progressionFactor>1.0</progressionFactor>
        </suspendOnFailure>
        <markForSuspension>
            <retriesBeforeSuspension>0</retriesBeforeSuspension>
        </markForSuspension>
    </http>
</endpoint>
